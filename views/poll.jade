extends layout

block content
	div.container
		h1= question
		form(action="/poll/vote", method="post")
			input(type="hidden", name="code", value="#{code}")
			each choice, i in choices
				div.radio
					label
						input(type="radio", name="choice", value="#{i}")
						=choice
			button(type="submit", class="btn btn-default") Submit
